{
  "users": {
    "id": "primaryKey",
    "name": {
      "type": "string",
      "require": true,
      "index": "IDX_NAME",
      "min": 3
    },
    "nickName": {
      "type": "string"
    },
    "password": {
      "type": "string",
      "require": true
    },
    "role": {
      "type": "enum",
      "enums": ["guest", "user", "admin"],
      "defaultVal": "\"guest\""
    },
    "email": {
      "type": "string",
      "require": true,
      "uniqueIndex": "IDX_EMAIL"
    }
  },
  "todos": {
    "id": "primaryKey",
    "userId": {
      "type": "number",
      "require": true,
      "index": "IDX_USERID"
    },
    "description": {
      "type": "string",
      "defaultVal": "\"todo\""
    },
    "isDone": {
      "type": "boolean",
      "defaultVal": "false"
    },
    "createdTime": "time",
    "updatedTime": "time!"
  }
}
